<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_recommendedPlanBG"
        android:layout_width="230dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:src="@drawable/recommended_plan_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_recommendedPlanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/iv_recommendedPlanBG"
        app:layout_constraintTop_toTopOf="@id/iv_recommendedPlanBG"
        app:layout_constraintBottom_toBottomOf="@id/iv_recommendedPlanBG">
    <TextView
        android:id="@+id/tv_planName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toned Arm"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beginner"
        android:textSize="11sp"
        android:textColor="@color/white"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>