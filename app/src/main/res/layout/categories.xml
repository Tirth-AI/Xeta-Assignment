<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_categoriesBG"
        android:layout_width="230dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:src="@drawable/categories_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_categoriesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/iv_categoriesBG"
        app:layout_constraintTop_toTopOf="@id/iv_categoriesBG">
        <TextView
            android:id="@+id/tv_categoryname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BICEP"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_exerciseCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Exercises"
            android:textSize="14sp"
            android:textColor="@color/white"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>